<div class="container p-4">
  <div class="row">
    <div class="col-ms-8  mx-auto">
      <div class="card">
        <div class="card-header">
          <h3>Actualice Usuario</h3>
        </div>
        <div class="card-body">
          <form action="/user/update/{{_usuario.id}}" method="POST">
            <div class="form-group">
              <label class=""  for="nombre">Nombre:</label>
              <input type="text" name="nombre" value="{{_usuario.nombre}}" placeholder="Ingrese su Nombre..." class="form-control">
            </div>
            <div class="form-group">
              <label class=""  for="usuario">Usuarios:</label>
              <input type="text" name="usuario" value="{{_usuario.usuario}}" placeholder="Ingrese Usuario..." class="form-control">
            </div>
            <div class="form-group">
              <label class=""  for="password">Password:</label>
              <input type="password" name="password" value="{{_usuario.password}}" placeholder="Ingrese Password..." class="form-control">
            </div>
            <div class="form-group ">
              <button class="btn btn-success">Guardar</button>
              <a href="/users" class="btn btn-danger">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>