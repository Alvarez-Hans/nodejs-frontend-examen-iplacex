<div class="container-fluid listData mx-auto">
  <div class="card col-sm-12 col-md-10 col-lg-8 mx-auto">
    <div class="card-header">
      <h3>Validador de Tiendas</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col table-responsive">
          <table class="table table-striped table-hover mt-2 w-100 mx-auto block">
            <thead class="table-primary">
              <tr>
                <th class="col th-sm col-sm-auto">Nombre</th>
                <th class="col th-sm col-sm-auto">Sucursal</th>
                <th class="col th-sm col-sm-auto">Direccion</th>
                <th class="col th-sm col-sm-auto">Cuidad</th>
                <th class="col th-sm col-sm-auto">Region</th>
                <th class="col th-sm col-sm-auto">Validado</th>
                <th class="col th-sm col-sm-2"></th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              {{#each _tiendas}}
              {{!-- data --}}
              <tr>
                <th scope="row">{{nombre}}</td>
                <td>{{nombre_sucursal}}</td>
                <td>{{direccion}}</td>
                <td>{{cuidad}}</td>
                <td>{{region}}</td>
                <td class="text-center"> <input type="checkbox" name="validado" {{#if validado}}checked{{/if}} onclick="return false;"></td>
                <td><a class="btn btn-primary" href="/tiendas/validar/{{id}}">Validar</a></td>
              </tr>
              {{else}}
              <tr>
                <td scope="row" colspan="8" class="table-warning">No existen Tiendas pendientes para validar.</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>