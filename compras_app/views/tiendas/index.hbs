<div class="container listData">
  <div class="card">
    <div class="card-header">
      <h3>Mantenedor de Tiendas</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col">
          <a class="btn btn-primary" href="/tienda/create">
            Nuevo
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col table-responsive text-nowrap">
          <table class="table table-striped table-hover table-sm mt-2 w-auto">
            <thead class="table-primary">
              <tr>
                <th class="col th-sm col-sm-auto">Nombre</th>
                <th class="col th-sm col-sm-auto">Sucursal</th>
                <th class="col th-sm col-sm-auto">Direccion</th>
                <th class="col th-sm col-sm-auto">Cuidad</th>
                <th class="col th-sm col-sm-auto">Region</th>
                <th class="col th-sm col-sm-auto">Validado</th>
                <th class="col th-sm col-sm-3" colspan="2"></th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              {{#each _tiendas}}
              {{!-- data --}}
              <tr>
                <th scope="row">{{nombre}}</td>
                <td>{{nombre_sucursal}}</td>
                <td>{{direccion}}</td>
                <td>{{cuidad}}</td>
                <td>{{region}}</td>
                <td> <input type="checkbox" name="validado" {{#if validado}}checked{{/if}} onclick="return false;"></td>
                <td><a class="btn btn-secondary" href="/tienda/update/{{id}}">Modificar</a></td>
                <td><a class="btn btn-danger" href="/tienda/delete/{{id}}">Eliminar</a></td>
              </tr>
              {{else}}
              <tr>
                <td scope="row" colspan="8" class="table-warning">No existen Tiendas creadas, por favor, precionar
                  "Nuevo" para crear una.</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>