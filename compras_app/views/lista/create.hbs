<div class="container p-4 listData">
  <div class="row">
    <div class="col-sm-8  mx-auto">
      <div class="card">
        <div class="card-header">
          <h3>Registre un nueva Lista de Compras</h3>
        </div>
        <div class="card-body">
          <form action="/lista/create/{{id_lista}}" method="POST">
            <div class="form-group">
              <label class=""  for="nombre">Nombre:</label>
              <input type="text" name="nombre" placeholder="Ingrese Nombre..." class="form-control" required>
            </div>
            <div class="form-group ">
              <button class="btn btn-success">Guardar</button>
              <a href="/listas" class="btn btn-danger">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>