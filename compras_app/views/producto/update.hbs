<div class="container p-4 listData">
  <div class="row">
    <div class="col-ms-8  mx-auto">
      <div class="card">
        <div class="card-header">
          <h3>Registre un nuevo Producto</h3>
        </div>
        <div class="card-body">
          <form action="/producto/update/{{_lista_detalle.id}}" method="POST" class="was-validated">
            <div class="form-group">
              <label class="" for="Producto">Producto:</label>
              <input type="text" name="producto" placeholder="Ingrese producto..." class="form-control" required autofocus value="{{_lista_detalle.producto}}">
              {{!-- <div class="invalid-tooltip">
                Por favor, ingrese el producto.
              </div> --}}
            </div>
            <div class="form-group">
              <label class="" for="costo_presupuesto">Monto estimado:</label>
              <input type="number" name="costo_presupuesto" placeholder="Ingresse monto estimado..."
                class="form-control" value="{{_lista_detalle.costo_presupuesto}}" required>
            </div>
            <div class="form-group">
              <label for="id_tienda">Tienda:</label>
              <select class="form-control" name="id_tienda">
                <option value="" {{#unless _lista_detalle.id_tienda }}selected{{/unless}}>Seleccione...</option>
                {{#each _tiendas}}
                <option value="{{id}}">{{nombre}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <label class="" for="comprado">Esta comprado?:</label>
              <input type="checkbox" name="comprado" {{#if _lista_detalle.comprado}}checked{{/if}}>
            </div>
            <div class="form-group">
              <label class="" for="costo_real">Monto Real:</label>
              <input type="number" name="costo_real" placeholder="Ingrese monto real..." class="form-control" value="{{_lista_detalle.costo_real}}">
            </div>
            <div class="form-group">
              <label class="" for="notas">Notas:</label>
              <textarea name="notas" rows="2" class="form-control" placeholder="Ingrese alguna nota...">
                {{_lista_detalle.notas}}
              </textarea>
            </div>
            <div class="form-group ">
              <button class="btn btn-success">Guardar</button>
              <a href="/lista/update/{{_lista_detalle.id_lista}}" class="btn btn-danger">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>