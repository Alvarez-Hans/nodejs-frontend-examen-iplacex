<div class="container p-4 listData">
      <div class="card col-sm-10 col-lg-8 mx-auto">
        <div class="card-header">
          <h3>Actualice la Tienda</h3>
        </div>
        <div class="card-body">
          <form action="/tienda/update/{{_tienda.id}}" method="POST" class="was-validated">
            <div class="form-group">
              <label class=""  for="nombre">Nombre:</label>
              <input type="text" name="nombre" placeholder="Ingrese Nombre..." class="form-control" required value="{{_tienda.nombre}}" autofocus>
            </div>
            <div class="form-group">
              <label class=""  for="nombre_sucursal">Nombre Sucursal:</label>
              <input type="text" name="nombre_sucursal" placeholder="Ingrese Sucursal..." class="form-control" value="{{_tienda.nombre_sucursal}}">
            </div>
            <div class="form-group">
              <label class=""  for="direccion">Direccion:</label>
              <input type="text" name="direccion" placeholder="Ingrese Direccion..." class="form-control" value="{{_tienda.direccion}}">
            </div>
            <div class="form-group">
              <label class=""  for="cuidad">Cuidad:</label>
              <input type="text" name="cuidad" placeholder="Ingrese Cuidad..." class="form-control" value="{{_tienda.cuidad}}">
            </div>
            <div class="form-group">
              <label class=""  for="region">Region:</label>
              <input type="text" name="region" placeholder="Ingrese Region..." class="form-control" value="{{_tienda.region}}">
            </div>
            <div class="form-group ">
              <button class="btn btn-success">Guardar</button>
              <a href="/tiendas" class="btn btn-danger">Cancelar</a>
            </div>
          </form>
        </div>
      
  </div>
</div>