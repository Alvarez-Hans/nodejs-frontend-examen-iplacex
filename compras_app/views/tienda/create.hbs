<div class="container-fluid mx-auto listData">
  <div class="card col-sm-10 col-lg-8 mx-auto">
    <div class="card-header">
      <h3>Registre un nueva Tienda</h3>
    </div>
    <div class="card-body">
      <form action="/tienda/create" method="POST" class="was-validated">
        <div class="form-group">
          <label class="" for="nombre">Nombre:</label>
          <input type="text" name="nombre" placeholder="Ingrese Nombre..." class="form-control" required>
        </div>
        <div class="form-group">
          <label class="" for="nombre_sucursal">Nombre Sucursal:</label>
          <input type="text" name="nombre_sucursal" placeholder="Ingrese Sucursal..." class="form-control">
        </div>
        <div class="form-group">
          <label class="" for="direccion">Direccion:</label>
          <input type="text" name="direccion" placeholder="Ingrese Direccion..." class="form-control" required>
        </div>
        <div class="form-group">
          <label class="" for="cuidad">Cuidad:</label>
          <input type="text" name="cuidad" placeholder="Ingrese Cuidad..." class="form-control" required>
        </div>
        <div class="form-group">
          <label class="" for="region">Region:</label>
          <input type="text" name="region" placeholder="Ingrese Region..." class="form-control" required>
        </div>
        <div class="form-group ">
          <button class="btn btn-success">Guardar</button>
          <a href="/tiendas" class="btn btn-danger">Cancelar</a>
        </div>
      </form>
    </div>

  </div>
</div>